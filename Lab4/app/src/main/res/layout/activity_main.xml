<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/playerPlaceholder"
        android:name="com.example.lab4.MediaFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_media" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fastControlPlaceholder"
        android:name="com.example.lab4.MediaFastControl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/playerPlaceholder"
        app:layout_constraintTop_toTopOf="@+id/playerPlaceholder"
        tools:layout="@layout/fragment_media_fast_control" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/progressBarPlaceholder"
        android:name="com.example.lab4.MediaProgressBar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/playerPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_media_progress_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>